<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".Community_LT">

    <!-- TOP BAR -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:text="Community"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#21242B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- SCROLLABLE CONTENT AREA -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- CREATE POST SECTION -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share with the community"
                android:textColor="#757575"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/LTcommunity_etPostContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="What's on your mind?"
                android:minHeight="100dp"
                android:gravity="top"
                android:textSize="16sp"
                android:textColor="#21242B"
                android:padding="12dp"/>
            <!-- Note: if @drawable/lt_input_bg doesn't exist, remove that line or use @android:color/white -->

            <Button
                android:id="@+id/LTcommunity_btnPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Post"
                android:textSize="16sp"
                android:backgroundTint="#FF7A00"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

            <!-- DIVIDER -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Posts"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#21242B"
                android:layout_marginBottom="10dp"/>

            <!-- CONTAINER FOR POSTS (This is where the posts will load) -->
            <LinearLayout
                android:id="@+id/LTcommunity_feedContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- BOTTOM NAVIGATION BAR -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_margin="18dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="#FFFFFF">

            <ImageButton
                android:id="@+id/LTcommunity_navHome"
                android:src="@drawable/ic_home"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                app:tint="#21242B"/>

            <ImageButton
                android:id="@+id/LTcommunity_navDiscover"
                android:src="@drawable/ic_discover"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                app:tint="#21242B"/>

            <ImageButton
                android:id="@+id/LTcommunity_navCommunity"
                android:src="@drawable/ic_community"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/lt_nav_center_bg"
                app:tint="#FF7A00"/>

            <ImageButton
                android:id="@+id/LTcommunity_navProfile"
                android:src="@drawable/ic_profile"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                app:tint="#21242B"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
