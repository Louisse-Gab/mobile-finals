<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    tools:context=".homepage2_LT">

    <!-- ================= HEADER ================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LThome_header"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:background="#21242B"
        android:padding="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/LThome_tvHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, Louisse"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold"
            android:fontFamily="@font/archivo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/LThome_tvSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Catch the latest from the PVL and world volleyball."
            android:textColor="#BFC3C9"
            android:textSize="14sp"
            android:fontFamily="@font/archivo"
            app:layout_constraintTop_toBottomOf="@id/LThome_tvHello"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ================= NAVBAR ================= -->
    <androidx.cardview.widget.CardView
        android:id="@+id/LThome_navCard"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/LThome_navInner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageButton
                android:id="@+id/LTnav_btnHome"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="Home"
                android:padding="10dp"
                android:src="@drawable/ic_home"
                app:tint="#21242B" />

            <ImageButton
                android:id="@+id/LTnav_btnDiscover"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="Discover"
                android:padding="10dp"
                android:src="@drawable/ic_discover"
                app:tint="#21242B" />

            <ImageButton
                android:id="@+id/LTnav_btnCommunity"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:background="@drawable/lt_nav_center_bg"
                android:contentDescription="Community"
                android:padding="12dp"
                android:src="@drawable/ic_community"
                app:tint="#21242B" />

            <ImageButton
                android:id="@+id/LTnav_btnProfile"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="Profile"
                android:padding="10dp"
                android:src="@drawable/ic_profile"
                app:tint="#21242B" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ================= SCROLLABLE CONTENT ================= -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/LThome_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/LThome_header"
        app:layout_constraintBottom_toTopOf="@id/LThome_navCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/LThome_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ===== TEAM SELECTOR ===== -->
            <HorizontalScrollView
                android:id="@+id/LThome_teamScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/LThome_teamChips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- PVL (UNSELECTED) -->
                    <TextView
                        android:id="@+id/LThome_chipPVL"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:text="PVL Team"
                        android:textColor="#21242B"
                        android:textStyle="bold" />

                    <!-- Japan (SELECTED / CLICKED) -->
                    <TextView
                        android:id="@+id/LThome_chipJapan"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginStart="10dp"
                        android:background="#21242B"
                        android:gravity="center"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:text="Japan WNT"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- ===== SECTION TITLE ===== -->
            <TextView
                android:id="@+id/LThome_tvTopStories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Top Stories (Japan WNT)"
                android:textColor="#21242B"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- ===== QUICK CARDS ===== -->
            <LinearLayout
                android:id="@+id/LThome_quickCardsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/LThome_cardLatestMatch"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Latest Match"
                            android:textColor="#21242B"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Japan WNT vs Opponent"
                            android:textColor="#1E1E1E"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="3 - 2 (W)"
                            android:textColor="#21242B"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Set 5 • 15-13"
                            android:textColor="#6B6B6B"
                            android:textSize="12sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/LThome_cardUpcoming"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upcoming"
                            android:textColor="#21242B"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Japan WNT vs Opponent"
                            android:textColor="#1E1E1E"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Dec 22 • 6:30 PM"
                            android:textColor="#6B6B6B"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Venue: National Gym"
                            android:textColor="#6B6B6B"
                            android:textSize="12sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- ===== FEATURED HIGHLIGHT ===== -->
            <androidx.cardview.widget.CardView
                android:id="@+id/LThome_cardFeatured"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Featured Highlight"
                        android:textColor="#21242B"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Japan WNT • Best Rally Compilation"
                        android:textColor="#1E1E1E"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/LThome_ivFeatured"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_marginTop="10dp"
                        android:background="#D9D9D9"
                        android:contentDescription="Featured highlight thumbnail"
                        android:scaleType="centerCrop" />

                    <Button
                        android:id="@+id/LThome_btnWatch"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="10dp"
                        android:text="Watch Highlight" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ===== COMMUNITY FEED ===== -->
            <TextView
                android:id="@+id/LThome_tvFeedHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Community Feed"
                android:textColor="#21242B"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/LThome_tvFeedHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Recent posts from the Japan WNT community will appear here."
                android:textColor="#6B6B6B"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#FFFFFF"
                android:orientation="vertical"
                app:cardCornerRadius="14dp"
                app:cardElevation="3dp">

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
