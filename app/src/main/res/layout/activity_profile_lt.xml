<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LTprofile_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".profileLT">

    <!-- ================= TOP BAR ================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LTprofile_topBar"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/LTprofile_tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="#21242B"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ================= NAVBAR (65dp) ================= -->
    <androidx.cardview.widget.CardView
        android:id="@+id/LTprofile_navCard"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_margin="18dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/LTprofile_navInner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp">

            <ImageButton
                android:id="@+id/LTprofile_navHome"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="Home"
                android:src="@drawable/ic_home"
                app:tint="#21242B"
                tools:ignore="HardcodedText" />

            <ImageButton
                android:id="@+id/LTprofile_navDiscover"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="Discover"
                android:src="@drawable/ic_discover"
                app:tint="#21242B"
                tools:ignore="HardcodedText" />

            <ImageButton
                android:id="@+id/LTprofile_navCommunity"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/lt_nav_center_bg"
                android:contentDescription="Community"
                android:src="@drawable/ic_community"
                app:tint="#21242B"
                tools:ignore="HardcodedText" />

            <ImageButton
                android:id="@+id/LTprofile_navProfile"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="Profile"
                android:src="@drawable/ic_profile"
                app:tint="#FF7A00"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ================= SCROLLABLE CONTENT ================= -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/LTprofile_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/LTprofile_topBar"
        app:layout_constraintBottom_toTopOf="@id/LTprofile_navCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/LTprofile_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingTop="14dp"
            android:paddingBottom="18dp">

            <!-- ===== USER ID (hidden, for binding later) ===== -->
            <TextView
                android:id="@+id/LTprofile_tvUserId"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                tools:text="user_12345"
                tools:ignore="HardcodedText" />

            <!-- ===== Profile picture ===== -->
            <FrameLayout
                android:id="@+id/LTprofile_photoWrap"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp">

                <ImageView
                    android:id="@+id/LTprofile_ivProfilePicture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Profile picture"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_profile"
                    android:clipToOutline="true"
                    tools:ignore="HardcodedText,UnusedAttribute,ContentDescription,ImageContrastWarning" />

            </FrameLayout>

            <!-- Name (tbl_users.name) -->
            <TextView
                android:id="@+id/LTprofile_tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Louisse Lizen"
                android:textColor="#21242B"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="(bind from tbl_users.name)"
                tools:ignore="HardcodedText" />

            <!-- Stats row -->
            <LinearLayout
                android:id="@+id/LTprofile_statsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <LinearLayout
                    android:id="@+id/LTprofile_statFollowers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/LTprofile_tvFollowersCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,089"
                        android:textColor="#21242B"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/LTprofile_tvFollowersLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Followers"
                        android:textColor="#8A8A8A"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText,TextContrastCheck" />
                </LinearLayout>

                <View
                    android:id="@+id/LTprofile_div1"
                    android:layout_width="1dp"
                    android:layout_height="36dp"
                    android:background="#E0E0E0" />

                <LinearLayout
                    android:id="@+id/LTprofile_statFollowing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/LTprofile_tvFollowingCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="275"
                        android:textColor="#21242B"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/LTprofile_tvFollowingLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Following"
                        android:textColor="#8A8A8A"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText,TextContrastCheck" />
                </LinearLayout>

                <View
                    android:id="@+id/LTprofile_div2"
                    android:layout_width="1dp"
                    android:layout_height="36dp"
                    android:background="#E0E0E0" />

                <LinearLayout
                    android:id="@+id/LTprofile_statEvents"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/LTprofile_tvEventsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textColor="#21242B"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/LTprofile_tvEventsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Events"
                        android:textColor="#8A8A8A"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText,TextContrastCheck" />
                </LinearLayout>
            </LinearLayout>

            <!-- About Me -->
            <TextView
                android:id="@+id/LTprofile_tvAboutTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="About Me"
                android:textColor="#21242B"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/LTprofile_tvAboutBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Pellentesque mattis scelerisque aliquam tincidunt lacus. Convallis tortor et tincidunt cras fringilla aliquet amet..."
                android:textColor="#7A7A7A"
                android:textSize="13sp"
                android:lineSpacingExtra="2dp"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <TextView
                android:id="@+id/LTprofile_tvReadMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Read More"
                android:textColor="#FF7A00"
                android:textSize="13sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <!-- Interest -->
            <TextView
                android:id="@+id/LTprofile_tvInterestTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Interest"
                android:textColor="#21242B"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <!-- Favorite Sports -->
            <TextView
                android:id="@+id/LTprofile_tvFavSportsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Favorite Sports"
                android:textColor="#8A8A8A"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/LTprofile_chipGroupSports"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:singleLine="false"
                app:chipSpacingHorizontal="10dp"
                app:chipSpacingVertical="10dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/LTprofile_chipSport1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volleyball"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/LTprofile_chipSport2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basketball"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/LTprofile_chipSport3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Badminton"
                    tools:ignore="HardcodedText" />
            </com.google.android.material.chip.ChipGroup>

            <!-- Favorite Teams -->
            <TextView
                android:id="@+id/LTprofile_tvFavTeamsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Favorite Teams"
                android:textColor="#8A8A8A"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/LTprofile_chipGroupTeams"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:singleLine="false"
                app:chipSpacingHorizontal="10dp"
                app:chipSpacingVertical="10dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/LTprofile_chipTeam1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Japan WNT"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/LTprofile_chipTeam2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PVL Team"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/LTprofile_chipTeam3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Creamline"
                    tools:ignore="HardcodedText" />
            </com.google.android.material.chip.ChipGroup>

            <!-- ================= LOGOUT BUTTON ================= -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/LTprofile_btnLogout"
                android:layout_width="149dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:backgroundTint="#D32F2F"
                android:text="Log Out"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                app:cornerRadius="24dp"
                tools:ignore="HardcodedText" />

            <!-- bottom spacer so content won't hide behind navbar -->

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
