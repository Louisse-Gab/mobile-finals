<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".profileLT">

    <!-- ================= TOP BAR ================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LTprofile_topBar"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/LTprofile_tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="#21242B"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ================= NAVBAR (65dp) ================= -->
    <androidx.cardview.widget.CardView
        android:id="@+id/LTdiscover_navCard"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_margin="18dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/LTdiscover_navInner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp">

            <ImageButton
                android:id="@+id/LTdiscover_navHome"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="Home"
                android:src="@drawable/ic_home"
                app:tint="#21242B" />

            <ImageButton
                android:id="@+id/LTdiscover_navDiscover"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="Discover"
                android:src="@drawable/ic_discover"
                app:tint="#21242B" />

            <ImageButton
                android:id="@+id/LTdiscover_navCommunity"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/lt_nav_center_bg"
                android:contentDescription="Community"
                android:src="@drawable/ic_community"
                app:tint="#21242B" />

            <ImageButton
                android:id="@+id/LTdiscover_navProfile"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="Profile"
                android:src="@drawable/ic_profile"
                app:tint="#FF7A00" /> <!-- Highlighted orange for active page -->

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ================= SCROLLABLE CONTENT ================= -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/LTprofile_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/LTprofile_topBar"
        app:layout_constraintBottom_toTopOf="@id/LTdiscover_navCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/LTprofile_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingTop="14dp"
            android:paddingBottom="18dp">

            <!-- Profile Picture -->
            <FrameLayout
                android:id="@+id/LTprofile_photoWrap"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp">

                <ImageView
                    android:id="@+id/LTprofile_ivProfilePicture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Profile picture"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_profile"
                    android:clipToOutline="true" />
            </FrameLayout>

            <!-- Name -->
            <TextView
                android:id="@+id/LTprofile_tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Loading Name..."
                android:textColor="#21242B"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Stats row -->
            <LinearLayout
                android:id="@+id/LTprofile_statsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- Followers -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:text="1,089"
                        android:textColor="#21242B"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="Followers"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- Following -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:text="275"
                        android:textColor="#21242B"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="Following"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

            <!-- About Me Title -->
            <TextView
                android:id="@+id/LTprofile_tvAboutTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="About Me"
                android:textStyle="bold"
                android:textColor="#21242B"/>

            <!-- About Me Text -->
            <TextView
                android:id="@+id/LTprofile_tvAboutText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="This is a bio about the user."
                android:lineSpacingMultiplier="1.2"/>

            <!-- ================= LOGOUT BUTTON (ADDED) ================= -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:text="Logout"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF4444"
                android:textStyle="bold"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
