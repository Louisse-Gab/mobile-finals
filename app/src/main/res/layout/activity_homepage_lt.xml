<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LThome_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    tools:context=".homepage_LT">

    <!-- TOP GREETING HEADER -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LThome_header"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:background="#21242B"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:paddingTop="18dp"
        android:paddingBottom="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/LThome_tvHello"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hello, Louisse"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold"
            android:fontFamily="@font/archivo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/LThome_tvSub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Catch the latest from the PVL and world volleyball."
            android:textColor="#BFC3C9"
            android:textSize="14sp"
            android:fontFamily="@font/archivo"
            app:layout_constraintTop_toBottomOf="@id/LThome_tvHello"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- CUSTOM ROUNDED NAVBAR -->
    <androidx.cardview.widget.CardView
        android:id="@+id/LThome_navCard"
        android:layout_width="381dp"
        android:layout_height="82dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LThome_navContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <!-- Even spacing using guidelines -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/LTnav_g1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.20" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/LTnav_g2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.40" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/LTnav_g3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.60" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/LTnav_g4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.80" />

        <!-- Home -->
        <ImageButton
            android:id="@+id/LTnav_btnHome"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="Home"
            android:padding="10dp"
            android:src="@drawable/ic_home"
            app:tint="#21242B"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/LTnav_g1" />

        <!-- Discover -->
        <ImageButton
            android:id="@+id/LTnav_btnDiscover"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="Discover"
            android:padding="10dp"
            android:src="@drawable/ic_discover"
            app:tint="#21242B"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/LTnav_g1"
            app:layout_constraintEnd_toStartOf="@id/LTnav_g2" />

        <!-- Community (CENTER) -->
        <ImageButton
            android:id="@+id/LTnav_btnCommunity"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/lt_nav_center_bg"
            android:contentDescription="Community"
            android:padding="12dp"
            android:src="@drawable/ic_community"
            app:tint="#21242B"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/LTnav_g2"
            app:layout_constraintEnd_toStartOf="@id/LTnav_g3" />

        <!-- Profile -->
        <ImageButton
            android:id="@+id/LTnav_btnProfile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="Profile"
            android:padding="10dp"
            android:src="@drawable/ic_profile"
            app:tint="#21242B"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/LTnav_g3"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/LThome_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/LThome_header"
        app:layout_constraintBottom_toTopOf="@id/LThome_navCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/LThome_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Team selector -->
            <HorizontalScrollView
                android:id="@+id/LThome_teamScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/LThome_teamChips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/LThome_chipPVL"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:background="#21242B"
                        android:gravity="center"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:text="PVL Team"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:fontFamily="@font/archivo" />

                    <TextView
                        android:id="@+id/LThome_chipJapan"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginStart="10dp"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:text="Japan WNT"
                        android:textColor="#21242B"
                        android:textStyle="bold"
                        android:fontFamily="@font/archivo" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Quick Cards Row -->
            <LinearLayout
                android:id="@+id/LThome_quickCardsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/LThome_cardLatestMatch"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Latest Match"
                            android:textColor="#21242B"
                            android:textStyle="bold"
                            android:fontFamily="@font/archivo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="PVL Team vs Opponent"
                            android:textColor="#1E1E1E"
                            android:textSize="14sp"
                            android:fontFamily="@font/archivo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="3 - 1 (W)"
                            android:textColor="#21242B"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/archivo" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/LThome_cardUpcoming"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upcoming"
                            android:textColor="#21242B"
                            android:textStyle="bold"
                            android:fontFamily="@font/archivo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Japan WNT vs Opponent"
                            android:textColor="#1E1E1E"
                            android:textSize="14sp"
                            android:fontFamily="@font/archivo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Dec 20 • 7:00 PM"
                            android:textColor="#6B6B6B"
                            android:textSize="13sp"
                            android:fontFamily="@font/archivo" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- FEATURED HIGHLIGHT -->
            <androidx.cardview.widget.CardView
                android:id="@+id/LThome_cardFeatured"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Featured Highlight"
                        android:textColor="#21242B"
                        android:textStyle="bold"
                        android:fontFamily="@font/archivo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Top Rally of the Week • Japan WNT"
                        android:textColor="#1E1E1E"
                        android:textSize="14sp"
                        android:fontFamily="@font/archivo" />

                    <ImageView
                        android:id="@+id/LThome_ivFeatured"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_marginTop="10dp"
                        android:background="#D9D9D9"
                        android:contentDescription="Featured highlight thumbnail"
                        android:scaleType="centerCrop" />

                    <Button
                        android:id="@+id/LThome_btnWatch"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="10dp"
                        android:text="Watch Highlight"
                        android:fontFamily="@font/archivo" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/LThome_tvFeedHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Community Feed"
                android:textColor="#21242B"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/archivo" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/LThome_rvFeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:nestedScrollingEnabled="false"
                tools:listitem="@android:layout/simple_list_item_2" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
