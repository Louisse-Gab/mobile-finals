<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:id="@+id/LTpost_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- USER + TIME -->
        <TextView
            android:id="@+id/LTpost_tvUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username â€¢ 2h ago"
            android:textStyle="bold"
            android:textColor="#21242B" />

        <!-- POST CONTENT -->
        <TextView
            android:id="@+id/LTpost_tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="This match was insane! Proud of the team!"
            android:textColor="#1E1E1E" />

        <!-- POST IMAGE (OPTIONAL) -->
        <ImageView
            android:id="@+id/LTpost_ivImage"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="8dp"
            android:background="#D9D9D9"
            android:scaleType="centerCrop"
            android:visibility="visible" />

        <!-- POST STATS -->
        <LinearLayout
            android:id="@+id/LTpost_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/LTpost_tvLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â¤ï¸ 0"
                android:textColor="#6B6B6B" />

            <TextView
                android:id="@+id/LTpost_tvComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="ðŸ’¬ 0"
                android:textColor="#6B6B6B" />
        </LinearLayout>

        <!-- COMMENTS PREVIEW -->
        <TextView
            android:id="@+id/LTpost_tvCommentPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="User2: What a game!"
            android:textColor="#6B6B6B"
            android:textSize="12sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
